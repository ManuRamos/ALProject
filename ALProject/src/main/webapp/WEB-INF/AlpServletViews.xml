<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>

<beans default-lazy-init="true">

    <bean id="index" class="org.springframework.web.servlet.view.JstlView">
        <property name="url">
            <value>/ocaso/views/formularios/index.jsp</value>
        </property>
    </bean>

    <bean id="vistaCliente" class="org.springframework.web.servlet.view.JstlView">
        <property name="url">
            <value>/ocaso/views/formularios/vistaCliente.jsp</value>
        </property>
    </bean>

    <bean id="vistaMantenimiento" class="org.springframework.web.servlet.view.JstlView">
        <property name="url">
            <value>/ocaso/views/formularios/vistaMantenimiento.jsp</value>
        </property>
    </bean>
    <bean id="jsonView" class="org.springframework.web.servlet.view.json.JsonView"/>
</beans>