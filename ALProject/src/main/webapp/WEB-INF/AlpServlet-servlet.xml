<?xml version="1.0" encoding="UTF-8"?>

<beans>

	<!--Bean para instanciarlo desde clases que no usan Spring-->
<!--     <bean id="customServiceLocator" class="com.hphis.custom.outpatient.listados.service.CustomServiceLocator" lazy-init="false"/> -->

    <!-- Mapeador de urls -->
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/custom/cex/*.custom">CustomsCexController</prop>
            </props>
        </property>
    </bean>

    <!-- Solucionador de Vistas -->
    <bean id="viewResolver" class="org.springframework.web.servlet.view.XmlViewResolver">
        <property name="location">
            <value>/WEB-INF/alpServletViews.xml</value>
        </property>
    </bean>

	<!-- inicio dgonzalez. mantisCAT 29179 -->
	<bean id="CustomsCexController" class="org.springframework.web.servlet.mvc.multiaction.MultiActionController">
        <property name="methodNameResolver">
            <ref bean="CustomsCexNameResolver"/>
        </property>
        <property name="delegate">
            <ref bean="CustomsCexDelegate"/>
        </property>
    </bean>

    <bean id="CustomsCexNameResolver" class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
        <property name="mappings">
            <props>
            	<prop key="/custom/cex/mostrarPrestSerAgendaIntPt.custom">mostrarPrestSerAgendaIntPt</prop>
            	<prop key="/custom/cex/listarPrestSerAgendaIntPt.custom">listarPrestSerAgendaIntPt</prop>
            	<prop key="/custom/cex/crearPrestSerAgendaIntPt.custom">crearPrestSerAgendaIntPt</prop>
            	<prop key="/custom/cex/editarPrestSerAgendaIntPt.custom">editarPrestSerAgendaIntPt</prop>
            	<prop key="/custom/cex/salvarPrestSerAgendaIntPt.custom">salvarPrestSerAgendaIntPt</prop>
            	<prop key="/custom/cex/eliminarPrestSerAgendaIntPt.custom">eliminarPrestSerAgendaIntPt</prop>
            </props>
        </property>
    </bean>

    <bean id="CustomsCexDelegate" class="com.hphis.custom.cex.action.CustomsCexAction">
    	<property name="cexPrestSerAgendaIntPtService">
            <ref bean="cexPrestSerAgendaIntPtService"/>
        </property>
    </bean>

	<bean id="cexPrestSerAgendaIntPtService" class="com.hphis.custom.cex.service.impl.CexPrestSerAgendaIntPtServiceImpl">
		<property name="cexPrestSerAgendaIntPtDAO">
			<ref bean="cexPrestSerAgendaIntPtDAO"/>
		</property>
	</bean>
	<bean id="cexPrestSerAgendaIntPtDAO" class="com.hphis.custom.cex.dao.impl.CexPrestSerAgendaIntPtDAOImpl"/>
	

</beans>